<!doctype html>
<html lang="ja">
	<head>
		<%- include('parts/head', {title: '編集中'}) %>
	</head>
	<body class="p-2">
		<%- include('parts/navbar', {}) %>

		<div class="container p-2">

			<h1 class="mb-5"><%- __("このプログラムは編集中です") %></h1>
		
			<div class="my-3">
				<div class="alert alert-primary" role="alert">
					<%- __("このプログラムは") %> <%= lockingUser.name.ja %> <%- __("が編集しています。2") %>
				</div>	
			</div>

			<div class="my-3">
				<button type="button" class="btn btn-danger" onclick="location.href='/programs/edit?programId=<%= program.programId %>&force=1';"><%- __("このまま編集を開始する") %></button>
			</div>

			<div class="my-3">
				<button type="button" class="btn btn-success" onclick="location.href='/programs/view?programId=<%= program.programId %>';"><%- __("プログラム詳細に戻る") %></button>
			</div>

		</div>
	</body>
</html>