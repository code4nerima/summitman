<!doctype html>
<html lang="ja">
	<head>
		<%- include('parts/head', {title: 'プログラムオーナー登録'}) %>
	</head>
	<body class="p-2">
		<%- include('parts/navbar', {}) %>

		<div class="container p-2">

			<h1 class="mb-5"><%- __("プログラムオーナー登録") %></h1>

			<div class="my-3">
				<div class="alert alert-primary" role="alert">
					<%= program.title.ja %>
				</div>	
			</div>

			<div class="my-3">
				<button type="button" class="btn btn-success" onclick="location.href='/programs/view?programId=<%= program.programId %>';"><%- __("プログラム詳細に戻る") %></button>
			</div>

			<h2><%- __("オーナー一覧") %></h2>
			<div id="owners"></div>

			<hr />
			<h2><%- __("ユーザー一覧") %></h2>
			<div id="userProfiles"></div>
		</div>

		<script>
			$(function () {
				reloadRequest("<%= program.programId %>") ;
			}) ;

			async function reloadRequest(programId) {
				
				let spinner = '<div class="d-flex justify-content-center"><div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div></div>' ;
				
				$("#owners").empty() ;
				$("#owners").append(spinner) ;
				$("#userProfiles").empty() ;
				$("#userProfiles").append(spinner) ;
				$("#pagenation").empty() ;
				
				let data = await fetch("/programOwners/data?programId=" + programId).then(response => response.json()) ;
				
				$("#owners").empty() ;
				$("#userProfiles").empty() ;
				$("#pagenation").empty() ;
				
				for (let key in data.owners) {
					let owner = data.owners[key] ;
					$("#owners").append(ownerBlock(owner)) ;
				}

				for (let key in data.userProfiles) {
					let userProfile = data.userProfiles[key] ;
					$("#userProfiles").append(userBlock(userProfile)) ;
				}

				let ul = $('<ul class="pagination">') ;

				ul.append('<li class="page-item"><a class="page-link" onclick="reloadRequest(0);">最初</a></li>') ;

				for (let i=0; i<data.pageCount; i++) {
					if (i == data.page) {
						ul.append('<li class="page-item active"><a class="page-link" onclick="reloadRequest(' + i + ');">' + (i + 1) +'</a></li>') ;
					} else {
						ul.append('<li class="page-item"><a class="page-link" onclick="reloadRequest(' + i + ');">' + (i + 1) +'</a></li>') ;
					}
				}

				ul.append('<li class="page-item"><a class="page-link" onclick="reloadRequest(' + (data.pageCount - 1) + ');">最後</a></li>') ;

				$("#pagenation").append('<nav aria-label="Page navigation example">')
					.append('<ul class="pagination">').append(ul) ;
			}

			async function onClickRemoveButton(uid) {
				let data = await fetch("/programOwners/remove?uid=" + uid + "&programId=<%= program.programId %>").then(response => response.json()) ;
				
				reloadRequest("<%= program.programId %>") ;
			}

			async function onClickAddButton(uid) {
				let data = await fetch("/programOwners/add?uid=" + uid + "&programId=<%= program.programId %>").then(response => response.json()) ;
				
				reloadRequest("<%= program.programId %>") ;
			}

			function ownerBlock(user) {
				let photoURLString = user.photoURL ;

				if (photoURLString == "" || photoURLString == undefined) {
					photoURLString = "images/profile.png" ;
				}

				return `<div class="card my-1">
							<div class="card-body">
								<div class="row">
									<div class="col-auto">
										<div id="profilePhoto"><img class="border rounded img-thumbnai" src="${photoURLString}" width="50"></div>
									</div>
									<div class="col">
										<div class="row">
											<div class="col-sm">
												${user.name.ja}
											</div>
											<div class="col-sm">
												
											</div>
											<div class="col-sm">
												<button type="button" class="btn btn-danger" style="width: 100%;" onclick="onClickRemoveButton('${user.uid}');"><%- __("削除") %></button>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>` ;				
			}

			function userBlock(user) {
				let roleString = getRoleString(user.role) ;
				let photoURLString = user.photoURL ;

				if (photoURLString == "" || photoURLString == undefined) {
					photoURLString = "images/profile.png" ;
				}

				return `<div class="card my-1">
							<div class="card-body">
								<div class="row">
									<div class="col-auto">
										<div id="profilePhoto"><img class="border rounded img-thumbnai" src="${photoURLString}" width="50"></div>
									</div>
									<div class="col">
										<div class="row">
											<div class="col-sm">
												${user.name.ja}
											</div>
											<div class="col-sm">
												${roleString}
											</div>
											<div class="col-sm">
												<button type="button" class="btn btn-primary" style="width: 100%;" onclick="onClickAddButton('${user.uid}');">追加</button>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>` ;				
			}
		</script>
	</body>
</html>