<!doctype html>
<html lang="ja">
	<head>
		<% if (genre.genreId != undefined) { %>
			<%- include('parts/head', {title: 'ジャンル編集'}) %>
		<% } else { %>
			<%- include('parts/head', {title: 'ジャンル作成'}) %>
		<% } %>
	</head>
	<body class="p-2">
		<%- include('parts/navbar', {}) %>

		<div class="container p-2">
			<% if (genre.genreId != undefined) { %>
				<h1 class="mb-5"><%- __("ジャンル編集") %></h1>
			<% } else { %>
				<h1 class="mb-5"><%- __("ジャンル作成") %></h1>
			<% } %>
			<form method="POST" action="/genre/edit">
				<div class="row row-cols-1 row-cols-md-2 g-2 mb-3">
					<div class="col-sm">
						<label for="name" class="form-label"><%- __("タイトル（日本語）") %><span class="badge bg-danger"><%- __("必須") %></span></label>
						<input maxlength="100" required type="text" class="form-control" id="ja_name" name="ja_name" value="<%= genre.name['ja'] %>">
					</div>
					<div class="col-sm">
						<label for="name" class="form-label"><%- __("タイトル（英語）") %><span class="badge bg-danger"><%- __("必須") %></span></label>
						<input maxlength="100" required type="text" class="form-control" id="en_name" name="en_name" value="<%= genre.name['en'] %>">
					</div>
					<div class="col-sm">
						<label for="name" class="form-label"><%- __("タイトル（繁体字）") %></label>
						<input maxlength="100" type="text" class="form-control" id="zh-TW_name" name="zh-TW_name" value="<%= genre.name['zh-TW'] %>">
					</div>
					<div class="col-sm">
						<label for="name" class="form-label"><%- __("タイトル（簡体字）") %></label>
						<input maxlength="100" type="text" class="form-control" id="zh-CN_name" name="zh-CN_name" value="<%= genre.name['zh-CN'] %>">
					</div>
				</div>

				<% if (genre.genreId != undefined) { %>
					<input type="hidden" name="genreId" value="<%= genre.genreId %>">
				<% } %>
				<div class="mb-3">
					<% if (genre.genreId != undefined) { %>
						<button type="submit" class="btn btn-primary"><%- __("更新") %></button>
					<% } else { %>
						<button type="submit" class="btn btn-primary"><%- __("作成") %></button>
					<% } %>
					<button type="button" class="btn btn-danger" onclick="window.history.back(-1);return false;"><%- __("キャンセル") %></button>
				</div>
			</form>
		</div>
	</body>
</html>