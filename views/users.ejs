<!doctype html>
<html lang="ja">
	<head>
		<%- include('parts/head', {title: 'ユーザー一覧'}) %>
	</head>
	<body>
		<%- include('parts/navbar', {}) %>

		<div class="container">
			<h1>ユーザー一覧</h1>

			<% for (let index in users) { %>
				<% let user = users[index] ; %>
				<div class="card my-1">
					<div class="card-body">
						<div class="row">
							<div class="col-sm">
								<a href="/users/user?uid=<%= user.uid %>"><%= user.name.ja %></a>
							</div>
							<div class="col-sm">
								<% if (user.role == 0) { %>
									<div>スタッフ</div>
								<% } else if (user.role == 1) { %>
									<div>プログラムオーナー</div>
								<% } else if (user.role == 2) { %>
									<div>管理者</div>
								<% } %>
							</div>
						</div>
						
					</div>
				  </div>
			<% } %>

			<div class="my-3">
				<button type="button" class="btn btn-danger" style="width: 130px;" onclick="window.history.back(-1);return false;">戻る</button>
			</div>
		</div>
	</body>
</html>