<!doctype html>
<html lang="ja">
	<head>
		<%- include('parts/head', {title: 'プロフィール'}) %>
	</head>
	<body class="p-2">
		<%- include('parts/navbar', {}) %>

		<div class="container p-2">

			<h1 class="mb-5"><%- __("プロフィール") %></h1>
				<div class="card">
					<ul class="list-group list-group-flush">
						<li class="list-group-item"><span class="badge bg-secondary me-2"><%- __("日") %></span><%= user.name.ja %></li>
						<li class="list-group-item"><span class="badge bg-secondary me-2"><%- __("かな") %></span></i><%= user.name.ja_kana %></li>
						<li class="list-group-item"><span class="badge bg-secondary me-2"><%- __("英") %></span></i><%= user.name.en %></li>
						<li class="list-group-item"><span class="badge bg-secondary me-2"><%- __("繁") %></span><%= user.name['zh-TW'] %></li>
						<li class="list-group-item"><span class="badge bg-secondary me-2"><%- __("簡") %></span><%= user.name['zh-CN'] %></li>
					</ul>
				</div>
			<% if (editable) { %>
			<div class="my-3">
				<a class="btn btn-primary" href="/profile?uid=<%= user.uid %>"><%- __("編集する") %></a>
			</div>
			<% } %>
			<div class="my-3">
				<button type="button" class="btn btn-danger" onclick="window.history.back(-1);return false;"><%- __("戻る") %></button>
			</div>
		</div>
	</body>
</html>