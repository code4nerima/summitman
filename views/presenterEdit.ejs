<!doctype html>
<html lang="ja">
	<head>
		<% if (presenter.presenterId != undefined) { %>
			<%- include('parts/head', {title: '登壇者編集'}) %>
		<% } else { %>
			<%- include('parts/head', {title: '登壇者作成'}) %>
		<% } %>

		<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">

	</head>
	<body class="p-2">
		<%- include('parts/navbar', {}) %>

		<div class="container p-2">
			<% if (presenter.presenterId != undefined) { %>
				<h1 class="mb-5">登壇者編集</h1>
			<% } else { %>
				<h1 class="mb-5">登壇者作成</h1>
			<% } %>
			
			<% if (presenter.presenterId != undefined) { %>
				<h2>プロフィール画像</h2>
				<div class="row py-1">
					<div class="col">
						<% if (presenter.photoURL == '') { %>
							<div id="profilePhoto"><img class="border rounded img-thumbnai" src="../images/profile.png" width="200"></div>
						<% } else { %>
							<div id="profilePhoto"><img class="border rounded img-thumbnai" src="<%= presenter.photoURL %>" width="200"></div>
						<% } %>
					</div>
				</div>
				<div class="row mb-3">
					<div class="col">
						<form id="photo">
							<input type="hidden" name="programId" value="<%= presenter.programId %>">
							<input type="hidden" name="presenterId" value="<%= presenter.presenterId %>">
							<input type="file" class="form-control" id="file" name="file" accept="image/*" onchange="changeFile(this);" aria-describedby="fileHelp">
							<label class="form-label small">ファイルサイズは1MB以内の画像を選択してください。</label>
						</form>
					</div>
					<div class="col-auto">
						<button type="button" id="photoDeleteButton" class="btn btn-danger">削除</button>
					</div>
				</div>
				<script>
					$(window).on('load', async () => {
						$('#photoDeleteButton').on('click', () => {
							$('#photoDeleteButton').prop('disabled', true);
		
							fetch("/programPresenters/photoDelete?programId=<%= presenter.programId %>&presenterId=<%= presenter.presenterId %>")
								.then(response => response.json())
								.then(data => {
									$('#profilePhoto').empty() ;
									$('#profilePhoto').append('<img class="border rounded img-thumbnai" src="../images/profile.png" width="200">') ;
									$('#photoDeleteButton').prop('disabled', false);
								});
						}) ;
					}) ;
		
					function changeFile(obj) {
						var fileList = $('#file').get(0).files;
		
						for (let key in fileList) {
							let file = fileList[key] ;
		
							if (file.size > 1024 * 1024) {
								alert("ファイルサイズは1MB以内のものを選んでください") ;
								return ;
							}
						}
		
						const formData = new FormData($('#photo').get(0));
		
						const param = {
							method: "POST",
							body: formData
						}
		
						fetch("/programPresenters/photo", param)
							.then(response => response.json())
							.then(data => {
								$('#profilePhoto').empty() ;
								$('#profilePhoto').append('<img class="border rounded img-thumbnai" src="' + data["publicUrl"] + '" width="200">') 
								$('#photoDeleteButton').prop('disabled', false);
							});
					}
				</script>
			<% } %>

			<form method="POST" action="/programPresenters/edit">
				<h2>名前</h2>
				<div class="row mb-3">
					<div class="col-sm">
						<label for="name" class="form-label">名前（日本語）<span class="badge bg-danger">必須</span></label>
						<input maxlength="50" required type="text" class="form-control" id="ja_name" name="ja_name" value="<%= presenter.name['ja'] %>">
					</div>
					<div class="col-sm">
						<label for="name" class="form-label">名前（ふりがな）<span class="badge bg-danger">必須</span></label>
						<input maxlength="50" required type="text" class="form-control" id="ja_name_kana" name="ja_name_kana" value="<%= presenter.name['ja_kana'] %>">
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-sm">
						<label for="name" class="form-label">名前（英語）<span class="badge bg-danger">必須</span></label>
						<input maxlength="50" required type="text" class="form-control" id="en_name" name="en_name" value="<%= presenter.name['en'] %>">
					</div>
					<div class="col-sm">
						<label for="name" class="form-label">名前（繁体中国語）</label>
						<input maxlength="50" type="text" class="form-control" id="zh-TW_name" name="zh-TW_name" value="<%= presenter.name['zh-TW'] %>">
					</div>
					<div class="col-sm">
						<label for="name" class="form-label">名前（簡体中国語）</label>
						<input maxlength="50" type="text" class="form-control" id="zh-CN_name" name="zh-CN_name" value="<%= presenter.name['zh-CN'] %>">
					</div>
				</div>

				<h2>所属</h2>
				<div class="row row-cols-1 row-cols-md-2 g-2 mb-3">
					<div class="col-sm">
						<label for="name" class="form-label">所属（日本語）</label>
						<input maxlength="50" type="text" class="form-control" id="ja_organization" name="ja_organization" value="<%= presenter.organization['ja'] %>">
					</div>
					<div class="col-sm">
						<label for="name" class="form-label">所属（英語）</label>
						<input maxlength="50" type="text" class="form-control" id="en_organization" name="en_organization" value="<%= presenter.organization['en'] %>">
					</div>
					<div class="col-sm">
						<label for="name" class="form-label">所属（繁体中国語）</label>
						<input maxlength="50" type="text" class="form-control" id="zh-TW_organization" name="zh-TW_organization" value="<%= presenter.organization['zh-TW'] %>">
					</div>
					<div class="col-sm">
						<label for="name" class="form-label">所属（簡体中国語）</label>
						<input maxlength="50" type="text" class="form-control" id="zh-CN_organization" name="zh-CN_organization" value="<%= presenter.organization['zh-CN'] %>">
					</div>
				</div>

				<h2>プロフィール</h2>
				<div class="row row-cols-1 row-cols-md-2 g-2 mb-3">
					<div class="col-sm">
						<label for="ja_description" class="form-label">プロフィール（日本語）</label>
						<textarea maxlength="1000" class="form-control" style="height: 300px;" id="ja_description" name="ja_description" placeholder=""><%= presenter.description["ja"] %></textarea>
					</div>
					<div class="col-sm">
						<label for="name" class="form-label">プロフィール（英語）</label>
						<textarea maxlength="1000" class="form-control" style="height: 300px;" id="en_description" name="en_description" placeholder=""><%= presenter.description["en"] %></textarea>
					</div>
					<div class="col-sm">
						<label for="name" class="form-label">プロフィール（繁体中国語）</label>
						<textarea maxlength="1000" class="form-control" style="height: 300px;" id="zh-TW_description" name="zh-TW_description" placeholder=""><%= presenter.description["zh-TW"] %></textarea>
					</div>
					<div class="col-sm">
						<label for="name" class="form-label">プロフィール（簡体中国語）</label>
						<textarea maxlength="1000" class="form-control" style="height: 300px;" id="zh-CN_description" name="zh-CN_description" placeholder=""><%= presenter.description["zh-CN"] %></textarea>
					</div>
				</div>

				<h2>その他</h2>
				<div class="row row-cols-1 row-cols-md-2 g-2 mb-3">
					<label for="name" class="form-label">並び順</label>
					<input maxlength="50" type="number" class="form-control" id="sortOrder" name="sortOrder" value="<%= presenter.sortOrder %>">
					<label class="form-label small">0から始まる並び順です。同じ番号のときはふりがな順に並びます。</label>
				</div>

				<input type="hidden" name="programId" value="<%= programId %>">

				<% if (presenter.presenterId != undefined) { %>
					<input type="hidden" name="presenterId" value="<%= presenter.presenterId %>">
				<% } %>
				<div class="mb-3">
					<% if (presenter.presenterId != undefined) { %>
						<button type="submit" class="btn btn-primary" style="width: 130px;">更新</button>
					<% } else { %>
						<button type="submit" class="btn btn-primary" style="width: 130px;">作成</button>
					<% } %>
					<button type="button" class="btn btn-danger" style="width: 130px;" onclick="window.history.back(-1);return false;">キャンセル</button>
				</div>
			</form>
		</div>
	</body>
</html>